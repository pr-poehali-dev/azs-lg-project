{
  "tests": [
    {
      "name": "Test successful login",
      "method": "POST",
      "body": {
        "login": "admin",
        "password": "admin123"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true,
        "user": {
          "login": "string"
        }
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Test invalid credentials",
      "method": "POST",
      "body": {
        "login": "wronguser",
        "password": "wrongpass"
      },
      "expectedStatus": 401,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Test missing credentials",
      "method": "POST",
      "body": {},
      "expectedStatus": 400,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    }
  ]
}
